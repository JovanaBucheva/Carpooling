<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driverInsertsRoute"
    android:background="@drawable/map">


    <include layout="@layout/appbardriver"
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/addFromLocation"
        android:layout_below="@id/my_toolbar"
        android:layout_marginTop="35dp"
        android:layout_marginHorizontal="35dp"
        android:hint="Enter start location"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/addToLocation"
        android:layout_below="@id/addFromLocation"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="35dp"
        android:hint="Enter end location"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/startTime"
        android:layout_below="@id/addToLocation"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="35dp"
        android:hint="Enter start time"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="48dp"
        android:id="@+id/seeRouteOnMap"
        android:layout_above="@id/enterRoute"
        android:text="Check route on map"
        android:textColor="#FFFFFF"
        android:backgroundTint="#21FFFFFF"
        android:textColorHighlight="@color/green"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/enterRoute"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="75dp"
        android:text="Enter route"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>